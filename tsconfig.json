{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2018",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",    
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
